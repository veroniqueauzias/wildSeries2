{% extends "base.html.twig" %}

{% block title %}WS2-categories{% endblock %}

{% block body %}
<div class="container mt-5">
   <h1 class="title mb-5 text-center">Liste des categories:</h1>
   <div class="flex flex-column align-items-center">
      {% for category in categories %}
      <div class="card categCard text-center mb-1">
         <div class="card-body">
            <a href="{{path('category_show', {'categoryName' : category.name}) }}">

               {# display uploaded categ icon if exists, default icon otherwise#}
               {% if category.iconName %}
                  <img src="{{ vich_uploader_asset(category) }}" alt="{{category.name}}_icon" class="categIcon"/>
               {% else %}
                  <img src="{{ asset('build/images/default_icon.png') }}" alt="{{category.name}}_icon" class="categIcon"/>
               {% endif %}   
                  <h2 class="subtitle categCardSub ms-2">{{ category.name }}</h2></a>
            </a>
         </div>
       </div>
  {% else %}
     Aucune catégorie trouvée.
  {% endfor %}

   {#pagination#}
   <div>
      {% include '_paging.html.twig' %}
   </div>
  
   
   <a href="{{path('category_new')}}" class="btn btn-primary mt-3">Ajouter une catégorie</a>
   </div>
</div>
<div class="returnLink">
   <a href="{{ path('app_index') }}">
      Retour à l'accueil
   </a>
</div>

{% endblock %} 
