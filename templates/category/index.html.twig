{% extends "base.html.twig" %}

{% block title %}WS2-categories{% endblock %}

{% block body %}
<div class="container mt-5">
   <h1 class="title mb-5">Liste des categories:</h1>
   {% for category in categories %}
       <a href="{{path('category_show', {'categoryName' : category.name}) }}"><h2 class="subtitle">{{ loop.index }} - {{ category.name }}</h2></a>
   {% else %}
      Aucune catégorie trouvée.
   {% endfor %}
</div>
<div class="returnLink">
   <a href="{{ path('app_index') }}">
      Retour à l'accueil
   </a>
</div>

{% endblock %} 