{% extends "base.html.twig" %}
{% block title %}WS2 - nouvelle série{% endblock %}

{% block body %}
<div class="container">
    <h1 class="title mt-5 text-center">Ajouter une série</h1>
        {{ form_start(form) }}
        <div class="row flex justify-content-center mt-3">
            <div class="col-md-5">
                {{ form_widget(form, {'attr': {'class': 'typeLabel'}}) }}
            </div>
        </div>
        <div class="row flex justify-content-center">
            <button type="submit" class="btn btn-primary col-2 mt-3">Ajouter</button>
        </div>
        {{ form_end(form) }}
</div>
<div class="returnLink">
    <a href="{{ path('program_index') }}">
       Retour à la liste des Séries
    </a>
 </div>
{% endblock %}