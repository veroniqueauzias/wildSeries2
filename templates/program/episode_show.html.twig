{% extends "base.html.twig" %}

{% block title %}WS2 - {{program.title}}{% endblock %}

{% block body %}

<div class="container mt-5">
    <div class="programDetails flex">
       <div class="poster">
          <img class="posterImg align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
       </div>
       <div class="media-body">
          <h1 class="title mt-0">{{ episode.title }}</h1>
          <p class="text-muted">{{program.title}} - Saison {{season.number}} - Episode n° {{ episode.number }}</p>
          <p>{{episode.synopsis}}</p>
          </div>
       </div>
    </div>
 <div class="returnLink">
    <a href="{{path('program_season_show', { 'program': program.id, 'season':season.id }) }}">
       Retour à la fiche de la saison
    </a>
 </div>
{% endblock %}