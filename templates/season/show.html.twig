{% extends 'base.html.twig' %}

{% block title %}WS2 - saisons{% endblock %}

{% block body %}
<div class="container">
    <h1 class="title mt-5">{{season.program.title}} - saison {{season.number}}</h1>

    <table class="table mt-3">
        <tbody>
            <tr>
                <th class="tableTitles">Année</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th class="tableTitles">Résumé</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>
    <div class = "flex flex-row justify-content-between">
        <a href="{{ path('season_edit', {'id': season.id}) }}" class="btn btn-primary col-md-2 mt-3">Modifier</a>
            {{ include('season/_delete_form.html.twig') }}
      
    </div>
</div>
<div class="mt-3">
    <a href="{{ path('season_index') }}" class="returnLink">Retour à la liste des saisons</a>
</div>

{% endblock %}
