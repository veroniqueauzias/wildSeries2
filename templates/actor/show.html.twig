{% extends 'base.html.twig' %}

{% block title %}WS2 - {{actor.firstname}} {{actor.lastName}} {% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="title mt-5">{{actor.firstname}} {{actor.lastName}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Date de naissance</th>
                <td>{{ actor.birthDate ? actor.birthDate|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Séries</th>
                <td>
                    {% for program in actor.programs %}
                    <p>{{program.title}}</p>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <div class = "flex flex-row justify-content-between">
        <a href="{{ path('actor_edit', {'id': actor.id}) }}" class="btn btn-primary col-md-2 mt-3">Modifier</a>
            {{ include('actor/_delete_form.html.twig') }}
    </div>
</div>
    <div class="mt-3">
        <a href="{{ path('actor_index') }}" class="returnLink">Retour à la liste des acteurs</a>
    </div>
    
{% endblock %}
