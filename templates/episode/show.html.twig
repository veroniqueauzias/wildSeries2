{% extends 'base.html.twig' %}

{% block title %}WS2 - episodes{% endblock %}

{% block body %}
<div class="container"> 
    <h1 class="title mt-5">{{episode.title}}</h1>
    <h2 class="subtitle">{{episode.season.program.title}}- saison{{episode.season.number}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th class="tableTitles">Résumé</th>
                <td>{{episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>

    <div class = "flex flex-row justify-content-between">
        <a href="{{ path('episode_edit', {'id': episode.id}) }}" class="btn btn-primary col-md-2 mt-3">Modifier</a>
            {{ include('episode/_delete_form.html.twig') }}
    </div>
</div>
<div class="mt-3">
<a href="{{ path('episode_index') }}" class="returnLink">Retour à la liste des épisodes</a>
</div>
{% endblock %}
